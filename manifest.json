{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Ticking Tabs",
    "description": "",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "Ticking Tabs!"
    },
    "background": {
        "service_worker": "./js/service-worker.js"
    },
    "permissions": ["tabs", "commands", "windows"],
    "commands": {
        "open_new_tab": {
            "suggested_key": {
                "default": "Alt+1"
            },
            "description": "Open a new tab"
        },
        "perpetuate_tab": {
            "suggested_key": {
                "default": "Alt+2"
            },
            "description": "Make a tab permanent"
        }
    },
    "host_permissions": [
    ]
}